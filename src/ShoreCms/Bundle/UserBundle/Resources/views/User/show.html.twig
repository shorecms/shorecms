{% extends 'CoreBundle::admin.html.twig' %}

{%  block header %}
    User
{% endblock %}

{% block body %}

    <div class="mdl-grid">

        <nav class="page-nav mdl-cell mdl-cell--3-col mdl-cell--12-col-tablet mdl-cell--12-col-phone">
            <ul>
                <li>
                    <a href="{{ path('user_index') }}"><i class="material-icons" role="presentation">arrow_back</i>Back to users</a>
                </li>
                <li>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}"><i class="material-icons" role="presentation">mode_edit</i>Edit</a>
                </li>
                    {{ form_start(delete_form) }}
                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="submit">Delete user</button>
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </nav>

        <div class="page-main mdl-cell mdl-cell--9-col mdl-cell--12-col-tablet mdl-cell--12-col-phone mdl-color--white mdl-shadow--2dp">
            <table class="mdl-data-table mdl-js-data-table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Created</th>
                    <td>{% if user.created %}{{ user.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Modified</th>
                    <td>{% if user.modified %}{{ user.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}
